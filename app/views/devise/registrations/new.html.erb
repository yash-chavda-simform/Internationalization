<h2><%= I18n.t "signup_form.signup_title" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label I18n.t 'signup_form.email_lable' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label  I18n.t 'signup_form.password_lable' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= I18n.t 'signup_form.charecter_length' %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label I18n.t 'signup_form.confirmation_password_lable' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit I18n.t "signup_form.signup_title" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
